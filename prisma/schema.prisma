generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "postgresqlExtensions", "views"]
  binaryTargets   = ["native"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgroonga]
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  author_id Int
  love      Boolean  @default(false)
  author    Author   @relation(fields: [author_id], references: [id])
  Chapter   Chapter?

  @@index([body], map: "pgroonga_content_index")
  @@map("articles")
}

model Author {
  name    String    @unique
  id      Int       @id @default(autoincrement())
  Article Article[]
  Book    Book[]

  @@map("authors")
}

model Book {
  id        Int       @id @default(autoincrement())
  title     String
  author_id Int
  author    Author    @relation(fields: [author_id], references: [id])
  Chapter   Chapter[]

  @@map("books")
}

model Chapter {
  id            Int     @id @default(autoincrement())
  book_id       Int
  article_id    Int     @unique
  chapter_order Float
  article       Article @relation(fields: [article_id], references: [id])
  book          Book    @relation(fields: [book_id], references: [id])

  @@map("chapters")
}

view articles_view_shadow {
  id            Int     @id
  author        String
  title         String
  body          String
  book          String
  chapter_order Float
  book_id       Int
  author_id     Int
  love          Boolean
}
