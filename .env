# Database Configuration
DATABASE_TYPE="postgresql"
DATABASE_URI=postgresql://postgres:password@localhost:5432/library

# Database Pool Configuration
DATABASE_POOL_MAX_CONNECTIONS=10
DATABASE_POOL_MIN_CONNECTIONS=2
DATABASE_POOL_ACQUIRE_TIMEOUT=30000
DATABASE_POOL_IDLE_TIMEOUT=60000
DATABASE_POOL_CONNECT_TIMEOUT=10000
DATABASE_POOL_KEEP_ALIVE_TIMEOUT=300000

# Database SSL Configuration
DATABASE_SSL=true

# Database Retry Configuration
DATABASE_RETRY_ATTEMPTS=3
DATABASE_RETRY_DELAY=1000

# Database Logging
DATABASE_ENABLE_LOGGING=true

# Additional Database Options (JSON format)
DATABASE_OPTIONS={}
NODE_ENV=dev
